{% extends 'base.html.twig' %}

{% block title %}Modifier le Livre{% endblock %}

{% block body %}
    <h1>Modifier le livre</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
    {{ form_end(form) }}

    <a href="{{ path('book_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

    <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?');" class="mt-3">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>
{% endblock %}