{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Book Details</h1>

    <p><strong>Title:</strong> {{ book.title }}</p>
    <p><strong>Publication Date:</strong> {{ book.publicationDate ? book.publicationDate|date('Y-m-d') : 'N/A' }}</p>
    <p><strong>Status:</strong> {{ book.enabled ? 'Enabled' : 'Disabled' }}</p>

    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-warning">Edit</a>
    <form action="{{ path('book_delete', {'id': book.id}) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>

    <a href="{{ path('book_index') }}" class="btn btn-secondary mt-3">Back to List</a>
</div>
{% endblock %}
